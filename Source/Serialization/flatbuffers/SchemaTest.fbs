namespace MyGame;

attribute "priority";

enum Color : byte { Red = 1, Green, Blue }

struct Vec3 {
  x:float;
  y:float;
  z:float;
}

table Monster {
  pos:Vec3;
  mana:short = 150;
  hp:short = 100;
  name:string;
  friendly:bool = false (deprecated, priority: 1);
  inventory:[ubyte];
  color:Color = Blue;
}

table RequestSomeThing {
  RequestString:string;
}

table ResponseSomThing {
  ResponseString:string;
}

union Message {
  RequestSomeThing,
  ResponseSomThing
}

table Protocol {
  body:Message;
}

root_type Protocol;
file_identifier "PTTT";